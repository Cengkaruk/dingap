//============================================================================
//
// The following configuration variables are only used at install time.
// Lots of scripts use this file, so please include a space around the "=".
//
//============================================================================

// General Product Info
//----------------------------------------------------------------------------

product = ClearOS Enterprise Edition
product_tagline = Powered by the ClearFoundation

// Webconfig SSL-Certificate
//----------------------------------------------------------------------------

ssl_country_tld = CA
ssl_state = ON
ssl_city = Toronto
ssl_organization = ClearFoundation
ssl_orgunit = ClearFoundation
ssl_email = noreply@pointclark.net

// Samba
//----------------------------------------------------------------------------

samba_name = ClearOS
samba_workgroup = Enterprise
samba_comment = ClearOS Enterprise Edition

// Default Network Settings
//----------------------------------------------------------------------------
// When a package is installed (e.g. app-httpd), it will look for the hostname
// in /etc/sysconfig/network and set its configuration file (e.g. httpd.conf)
// appropriately.  Due to some quirks in the installer, the 
// /etc/sysconfig/network does not yet have the correct hostname -- it has
// the default "localhost.localdomain" as the entry.  To get around this 
// issue, the installer will set the given hostname.

network_default_hostname = system.clearos.lan
network_default_domain = clearos.lan

// Miscellaneous Policies
//----------------------------------------------------------------------------

redirect_url = http://www.clearfoundation.com/redirect
