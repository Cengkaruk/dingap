$BASEDIR = isset($_ENV['WEBCONFIG_ROOT']) ? $_ENV['WEBCONFIG_ROOT'] : "/var/webconfig";

require_once($BASEDIR . "/common/Logger.class.php");
require_once($BASEDIR . "/api/IfaceManager.class.php");
require_once($BASEDIR . "/api/Iface.class.php");

$ifacemanager = new IfaceManager();

$ifaces = $ifacemanager->GetInterfaceDetails();

foreach ($ifaces as $ifacename => $details) {
	if (!empty($details['configured']) && empty($details['ifcfg']['hwaddr']) && !preg_match("/ppp/", $ifacename)) {
		Logger::Syslog("installer", "adding MAC address to network configuration: $ifacename");
		$iface = new Iface($ifacename);
		$iface->SetMac();
	}
}

?>
