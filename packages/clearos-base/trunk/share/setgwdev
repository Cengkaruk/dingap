use strict;
use lib '/usr/share/clearos/base/scripts';
require 'functions';

# Usual security measures... see "perlsec" manual page for details.
#------------------------------------------------------------------

$ENV {'PATH'} = '/sbin';
$ENV {'SHELL'} = '/bin/bash';
delete $ENV {'ENV', 'BASH_ENV'};

if ($< != 0) {
	print("You must be root to update system files... exiting.\n");
	exit;
}

if ((!$ARGV[0]) || (!($ARGV[0] =~ /^([ethp0-9]*)$/))) {
	print("Invalid interface name... using default eth0\n");
	$ARGV[0] = "eth0";
}

# Main
#-----

SetGateway($ARGV[0]);

